<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_width="180dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView"/>
    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="Last Name"
        android:background="#72AAA8A8"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/input2"/>

    <EditText
        android:id="@+id/input2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="First Name"
        android:background="#72AAA8A8"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:text="Gender"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/input2" />

    <RadioGroup
        android:id="@+id/radioGroupCoffeeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="6dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView3">

        <RadioButton
            android:id="@+id/radDecaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radExpresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="20dp"
            android:text="Female" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="25sp"
        android:layout_marginTop="15px"
        android:layout_below="@+id/radioGroupCoffeeType" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="250dp"

        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="Birthday"
        android:background="#72AAA8A8"
        android:textSize="25sp"
        android:layout_below="@+id/textView4" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textSize="25sp"
        android:layout_marginTop="15px"
        android:layout_below="@+id/btnGo" />

    <EditText
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:background="#72AAA8A8"
        android:textSize="25sp"
        android:layout_below="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Address"
        android:textSize="25sp"
        android:layout_marginTop="15px"
        android:layout_below="@+id/textView7" />

    <EditText
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="Address"
        android:background="#72AAA8A8"
        android:textSize="25sp"
        android:layout_below="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <CheckBox
        android:id="@+id/chkCream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:text="I agree to Terms of Use"
        android:textSize="20dp"
        android:layout_below="@+id/textView9" />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/Register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="35dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chkCream" />

</RelativeLayout>
